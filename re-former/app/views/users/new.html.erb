<%= form_for @user do |f| %>
	<p>
		<%= f.label :username, "Username: " %><br>
		<%= f.text_field :username %>
	</p>
	<p>
		<%= f.label :email, "Email: " %><br>
		<%= f.text_field :email, :value => "example@example.com" %>
	</p>
	<p>
		<%= f.label :password, "Password: " %><br>
		<%=	f.password_field :password %>
	</p>

	<%= f.submit %>
<% end %>