<div class="page-header">
	<h1>Create a new post</h1>
</div>
<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for @post do |f| %>
			<%= f.label :title %>
			<%= f.text_field :title, class: 'form-control' %>

			<%= f.label :body %>
			<%= f.text_field :body, class: 'form-control' %>

			<%= f.submit "Save", class: 'btn btn-primary' %>
		<% end %>
	</div>
</div>